{
  "name": "chaos-rps-io",
  "version": "1.0.0",
  "description": "실시간 멀티플레이어 가위바위보 IO 게임",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:client": "pnpm --filter @chaos-rps/client dev",
    "dev:server": "pnpm --filter @chaos-rps/server dev",
    "build": "pnpm --filter @chaos-rps/shared build && pnpm --filter @chaos-rps/client build",
    "build:shared": "pnpm --filter @chaos-rps/shared build",
    "build:server": "pnpm --filter @chaos-rps/shared build",
    "build:client": "pnpm --filter @chaos-rps/shared build && pnpm --filter @chaos-rps/client build",
    "start": "pnpm --filter @chaos-rps/server start",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "inquirer": "8.2.5",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
